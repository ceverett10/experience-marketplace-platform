{
  "name": "@experience-marketplace/mcp-server",
  "version": "0.1.0",
  "private": true,
  "description": "MCP Server for Holibob Product Discovery API - full look-to-book flow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "holibob-mcp": "./dist/bin/serve.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/bin/serve.js",
    "start:stdio": "node dist/bin/serve.js --transport=stdio",
    "start:http": "node dist/bin/serve.js --transport=http --port=3100",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build:publish": "tsup"
  },
  "dependencies": {
    "@experience-marketplace/holibob-api": "*",
    "@experience-marketplace/jobs": "*",
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@prisma/client": "^5.7.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
