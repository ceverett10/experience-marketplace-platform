{
  "name": "experience-marketplace-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous SEO/LLM-optimised experience marketplace platform powered by Holibob API",
  "author": "Holibob <craig@holibob.tech>",
  "license": "UNLICENSED",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build -w @experience-marketplace/shared -w @experience-marketplace/database -w @experience-marketplace/holibob-api -w @experience-marketplace/tickitto-api -w @experience-marketplace/ui-components -w @experience-marketplace/content-engine -w @experience-marketplace/jobs -w @experience-marketplace/mcp-server --if-present",
    "build:apps": "npm run build -w @experience-marketplace/admin -w @experience-marketplace/demand-generation -w @experience-marketplace/website-platform --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "start": "npm run start --workspaces --if-present",
    "start:web": "concurrently -n website,admin,mcp,proxy \"npm run start --workspace=@experience-marketplace/website-platform\" \"npm run start --workspace=@experience-marketplace/admin\" \"node packages/mcp-server/dist/bin/serve.js --transport=http --port=3100\" \"npm run start --workspace=@experience-marketplace/proxy\"",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky",
    "db:generate": "npm run db:generate --workspace=@experience-marketplace/database",
    "db:migrate": "npm run db:migrate --workspace=@experience-marketplace/database",
    "db:migrate:deploy": "npm run db:migrate:deploy --workspace=@experience-marketplace/database",
    "db:push": "npm run db:push --workspace=@experience-marketplace/database",
    "db:seed": "npm run db:seed --workspace=@experience-marketplace/database",
    "db:studio": "npm run db:studio --workspace=@experience-marketplace/database"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
